<Window x:Class="EventsProjectGUI.MusicEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventsProjectGUI"
        mc:Ignorable="d"
        Title="MusicEventWindow" Height="250" Width="750">
	<Grid>
		<Grid.ColumnDefinitions >
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />


		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label x:Name="Artist" Grid.Column="0" Grid.Row="0">Artist</Label>
		<Label x:Name="Venue" Grid.Column="0" Grid.Row="1">Venue</Label>
		<Label x:Name="City" Grid.Column="0" Grid.Row="2">City</Label>
		<Label x:Name="Country" Grid.Column="0" Grid.Row="3">Country</Label>
		<Label x:Name="Capacity" Grid.Column="0" Grid.Row="4">Capacity</Label>
		<Label x:Name="Date" Grid.Column="2" Grid.Row="1">Date</Label>
		<Label x:Name="Time" Grid.Column="2" Grid.Row="2">Time</Label>
		<Label x:Name="TicketsSold" Grid.Column="2" Grid.Row="4">Tickets Sold</Label>

		<TextBox x:Name="ArtistInfo" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" IsReadOnly="True"/>
		<TextBox x:Name="VenueInfo" Grid.Column="1" Grid.Row="1" IsReadOnly="True"/>
		<TextBox x:Name="CityInfo" Grid.Column="1" Grid.Row="2" IsReadOnly="True"/>
		<TextBox x:Name="CountryInfo" Grid.Column="1" Grid.Row="3" IsReadOnly="True"/>
		<TextBox x:Name="CapacityInfo" Grid.Column="1" Grid.Row="4" IsReadOnly="True"/>
		<TextBox x:Name="DateInfo" Grid.Column="3" Grid.Row="1" IsReadOnly="True"/>
		<TextBox x:Name="TimeInfo" Grid.Column="3" Grid.Row="2" IsReadOnly="True"/>
		<TextBox x:Name="TicketsSoldInfo" Grid.Column="3" Grid.Row="4" IsReadOnly="True"/>

		<Button x:Name="EditEvent" Grid.Column="2" Grid.Row="5" Click="EditEvent_Click">Edit Event</Button>
		<ComboBox x:Name="NewVenue" MaxDropDownHeight="90" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="1" Visibility="Hidden"></ComboBox>
		<ComboBox x:Name="MusicBox" MaxDropDownHeight="90" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="2" Visibility="Hidden" SelectionChanged="MusicBox_SelectionChanged"></ComboBox>
		<Button x:Name="RemoveEvent" Grid.Column="3" Grid.Row="5" Click="RemoveEvent_Click">Remove Event</Button>
		<Button x:Name="SellTickets" Grid.Column="0" Grid.Row="5" Click="SellTickets_Click">Sell Tickets</Button>


	</Grid>
</Window>
